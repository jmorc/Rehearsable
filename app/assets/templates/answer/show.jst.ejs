<% if (type === 'checkbox') { %>
  <% var name = answer.escape("question_id").toString() %>
<% } else { %>
  <% var name = answer.escape("question_id").toString() + "[]" %>
<% } %>

<label>
<input type="<%=type%>"
   name="<%= "Question " + name %>"
   value="<%=answer.escape("body") %>"
</label>   <%= answer.escape("body") %>

<% if (editable) { %>
  <button class="editAnswer btn btn-default">Edit answer option</button>
  <button class="deleteAnswer btn btn-default">Delete answer option</button>
<% } %>